<% layout('layouts/boilerplate') %><%- include('partials/header') %>

<div id="auth-forms">
  <h1><%- userAction %></h1>

  <% if (msg) {%>
  <h3 id="user-messages"><%- msg %></h3>
  <% } %>

  <form action="<%- form.action %>" method="post">
    <section id="email">
      <label for="email">e-mail</label>
      <input name="email" type="text" autocomplete="email" required autofocus />
    </section>
    <section id="password">
      <label for="<%- form.password %>">Password</label>
      <input
        id="<%- form.password %>"
        name="password"
        type="password"
        autocomplete="<%- form.password %>"
        required
      />
    </section>
    <button type="submit">Submit</button>
  </form>
</div>
